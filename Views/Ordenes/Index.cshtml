@model Formulario_Basico_MVC.Models.Ordenes
@{
    ViewBag.Title = "Ordenes";
    var listOrdenes=ViewData["listaOrdenes"]as List<Ordenes>;
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Ordenes" asp-action="Creacion">
                <div class="form-group">
                    <label asp-for="Instrumento" class="control-label"></label>
                    <input asp-for="Instrumento" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                </div>
                <br>
                <div class="form-group text-center">
                    <button type=submit class="btn btn-primary">
                        Ordenar
                    </button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <div  class="row justify-content-center">
        <table class="table table-striped table-bordered table-haver">
            <thead>
                <tr>
                    <th>Instrumento</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Costo</th>
                    <th>Tax</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var c in listOrdenes){
                    <tr>
                        <td>@c.Instrumento</td>
                        <td>@c.Cantidad</td>
                        <td>@c.Precio</td>
                        <td>@c.Costo</td>
                        <td>@c.Tax</td>
                        <td>@c.Total</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>